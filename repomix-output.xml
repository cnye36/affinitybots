      'text/plain',
      'text/csv',
      'text/markdown'
    ) THEN RETURN 'document';
    WHEN mime_type LIKE 'video/%' THEN RETURN 'video';
    WHEN mime_type LIKE 'audio/%' THEN RETURN 'audio';
    WHEN mime_type IN ('application/zip', 'application/x-rar-compressed') THEN RETURN 'archive';
